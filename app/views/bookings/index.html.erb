<h1>Your Bookings</h1>

<table class="table table-bordered">
 <thead>
  <tr>
    <th>Booking_id</th>
    <th>Name</th>
    <th>Seat_no</th>
    <th>Date</th>
    <th>Action</th>
  </tr>
</thead>
  <tbody>
    <% @bookings.each do |booking| %>
    <tr>
      <td><%= booking.id%></td>
      <td><%= booking.name%></td>
      <td><%= booking.seat_no%></td>
      <td><%= booking.date%><td>
      <%= link_to "Delete", booking_path(booking), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>      
    </tr>
    <% end %>
  </tbody>
</table>
