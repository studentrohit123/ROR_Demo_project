<div class="col-lg-12">
<div class="card rounded-0 mt-5 mb-5">
  <div class="card-body">
    <h2 class="text-center"></h2>
  </div>
</div>
<%= link_to "Create New Bus",  new_bus_path, class: "btn btn-primary btn-lg mb-4 rounded-0" %>
<table class="table table-bordered">
 <thead>
  <tr>
    <th>Name</th>
    <th>Number</th>
    <th>Capacity</th>
    <th>bus_class</th>
    <th>Actions</th>
    <th>route_id</th>
  </tr>
</thead>
  <tbody>
    <% @bus.each do |bus| %>
    <tr>
      <td><%= bus.name%></td>
      <td><%= bus.number%></td>
      <td><%= bus.capacity%></td>
      <td><%= bus.bus_class%><td>
      
      <%= link_to "Edit", edit_bus_path(bus), class: "btn btn-primary" %>
      <%= link_to "Delete", bus_path(bus), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
      </td>
      </tr>
      <% end %>
      </tbody>
</table>

